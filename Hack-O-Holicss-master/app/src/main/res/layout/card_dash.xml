<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carddash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/tops_dash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/wash_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:padding="8dp"
            android:text="Washroom-1"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:id="@+id/btn_count1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"

                android:text="50" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man"/>

            <TextView
                android:gravity="center"
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="PEOPLE COUNT" />

        </LinearLayout>

        <TextView
            android:id="@+id/cleaned_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wash_id"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="Last Cleaned at:"/>
        <TextView
            android:id="@+id/cleaned_at_val"
            android:layout_toRightOf="@id/cleaned_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wash_id"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="10:00am"/>
        <TextView
            android:id="@+id/cleaned_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cleaned_at"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="No. of Times cleaned:"/>
        <TextView
            android:id="@+id/cleaned_num_val"
            android:layout_toRightOf="@id/cleaned_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cleaned_at"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="10:00am"/>
        <TextView
            android:id="@+id/issue_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cleaned_num"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text=" No of Issues:"/>
        <TextView
            android:id="@+id/issuenum_val"
            android:layout_toRightOf="@id/cleaned_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cleaned_num"
            android:padding="8dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="23"/>







    </RelativeLayout>
</android.support.v7.widget.CardView>